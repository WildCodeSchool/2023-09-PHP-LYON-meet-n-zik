{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container sign-up-page">
		<h2>Page d'inscription</h2>
		<article>
			<header>
				<h3>Vous recevez des musiciens</h3>
			</header>
			<form action="" method="post">
				<h4>Espace d'inscription hôte</h4>
				<fieldset>
					<label for="host-name">Votre identifiant :
					</label>
					<input type="text" id="host-name" name="host-name" required placeholder="Eliase">
				</fieldset>
				<label for="email">Votre email :
				</label>
				<input type="email" id="email" name="email" required placeholder="lamarquise@gmail.com">
				<fieldset>
					<label for="password">Votre mot de passe :
					</label>
					<input type="password" id="password" name="password" required>
				</fieldset>
				<fieldset>
					<label for="password">Confirmation du mot de passe :
					</label>
					<input type="password" id="password" name="password" required>
				</fieldset>
				<div class="buttons-line">
					<button type="submit">Connexion</button>
				</div>
			</form>
		</article>

		<article>
			<header>
				<h3>Vous êtes musicien</h3>
			</header>
			<form action="" method="post">
				<h4>Espace d'inscription musicien</h4>
				<fieldset>
					<label for="band-name">Votre identifiant :
					</label>
					<input type="text" id="band-name" name="band-name" required placeholder="Salt">
				</fieldset>
				<label for="email">Votre email :
				</label>
				<input type="email" id="email" name="email" required placeholder="saltgeneration@live.fr">
				<fieldset>
					<label for="password">Votre mot de passe :
					</label>
					<input type="password" id="password" name="password" required>
				</fieldset>
				<fieldset>
					<label for="password">Confirmation du mot de passe :
					</label>
					<input type="password" id="password" name="password" required>
				</fieldset>
				<div class="buttons-line">
					<button type="submit">Connexion</button>
				</div>
			</form>
		</article>
	</div>
{% endblock %}
