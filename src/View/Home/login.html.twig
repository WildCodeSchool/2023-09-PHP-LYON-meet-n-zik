{% extends 'layout.html.twig' %}

{% block content %}
	<h2>Vous recevez des groupes de musique</h2>

	<form action="">
		<h3>Connexion à votre compte hôte</h3>
		<fieldset>
			<label for="UserName">Nom d'utilisateur :
			</label>
			<input type="text" id="UserName" name="UserName" required placeholder="Toto">
		</fieldset>
		<label for="email">Votre email :
		</label>
		<input type="email" id="email" name="email" required placeholder="toto.tutu@tata.com">
		<fieldset>
        		<label for="password">Votre mot de passe :
		</label>
		<input type="email" id="email" name="email" required placeholder="toto.tutu@tata.com"></fieldset>
		<fieldset></fieldset>
		<div></div>
		<div class="buttonsLine">
			<button type="submit">Envoyer
				<img src="images/mail.png"></button>
		</div>
	</form>
	<h2>Vous êtes musicien</h2>

	<form action="">
		<h3>Connexion à votre compte musicien</h3>
		<div>
			<label for="companyName">Nom de votre entreprise :
			</label>
			<input type="text" id="companyName" name="companyName" required placeholder="World Compagny">
		</div>

		<div>
			<label for="name">Votre nom :
			</label>
			<input type="text" id="name" name="name" required="required" placeholder="Toto">
		</div>

		<div>
			<label for="email">Votre email :
			</label>
			<input type="email" id="email" name="email" required>
		</div>

		<div>
			<label for="contactMessage">Votre message :
			</label>
			<textarea name="contactMessage" id="contactMessage" required rows="10"></textarea>
		</div>

		<div class="buttonsLine">
			<button type="submit">Envoyer
				<img src="images/mail.png"></button>
		</div>
	</form>
{% endblock %}
