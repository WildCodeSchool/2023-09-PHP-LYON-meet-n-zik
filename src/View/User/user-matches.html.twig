{% extends 'layout.html.twig' %}

{% block content %}

	<div class="container matches-page">
		<h2>Mes favoris</h2>
		<h3>Ils m'ont aimé</h3>
		{% for match in matchess %}
			<article>
				<header>{{ match.user_name }}</header>
				{% if match.video %}
					{% set videoId = match.video|split('/')|last|split('?')|first %}
					{% set embedLink = 'https://www.youtube.com/embed/' ~ videoId %}

					<iframe src="{{ embedLink }}"></iframe>
					<p>{{ match.email }}</p>
					<p>{{ match.description }}</p>
				{% else %}
					<p>Aucune vidéo disponible pour cet utilisateur.</p>
				{% endif %}
				<footer>
					<form action="" method="post">
						<input type="hidden" name="targetId" value={{match.id}}>
						<input type="submit" value="J'aime en retour">
					</form>
				</footer>
			</article>
		{% endfor %}

	</div>
{% endblock %}
