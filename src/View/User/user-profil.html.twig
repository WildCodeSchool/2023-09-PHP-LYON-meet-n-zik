{% extends 'layout.html.twig' %}

{% block content %}
	<div class="container band-profil-page">

		<header>
			<h3>Votre profil</h3>
		</header>
		<article>
			<header>
				<p>Nom</p>
			</header>
			{{ user.user_name }}
		</article>
		<article>
			<header>
				<p>Email</p>
			</header>
			{{ user.email }}
		</article>
		<article>
			<header>
				<p>Description</p>
			</header>
			{{ user.description }}
		</article>
		<article>
			<header>
				<p>Vidéo</p>
			</header>
			{% if user.video %}
				{% set videoId = user.video|split('/')|last|split('?')|first %}
				{% set embedLink = 'https://www.youtube.com/embed/' ~ videoId %}

				<iframe width="560" height="315" src="{{ embedLink }}" frameborder="0" allowfullscreen></iframe>
			{% else %}
				<p>Aucune vidéo disponible pour cet utilisateur.</p>
			{% endif %}
		</article>
	</div>
{% endblock %}
